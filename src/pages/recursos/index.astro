---
import Layout from '@/layouts/Layout.astro'
import { blogPostData } from '@/data/blogPostData'
---

<Layout
  titlePage='Centro de Recursos | Kit de Datos Abiertos'
  descriptionPage='Encuentra herramientas, guías y conocimientos esenciales diseñados para ayudarte a aprovechar al máximo el potencial de los datos.'
  currentUrl='recursos'
  isWhiteBg={true}>
  <section class='bg-gradient-to-r from-cyan-600 to-green-500'>
    <div class='section-container py-16'>
      <h3 class='section-title mb-8 text-white'>Centro de Recursos</h3>
      <p class='section-subtitle text-zinc-50'>
        Encontrarás herramientas, guías y conocimientos esenciales diseñados para ayudarte a
        aprovechar al máximo el potencial de los datos.
      </p>
    </div>
  </section>

  <section class='section-container'>
    {
      blogPostData.map(post => {
        return (
          <a href={post.postUrl}>
            <article class='grid cursor-pointer place-content-center place-items-center gap-8 border-b py-8 transition-transform hover:scale-[1.01] md:grid-cols-[1fr,max-content]'>
              <img
                class='order-1 w-full max-w-40 rounded-xl md:order-2'
                src={post.imageUrl}
                alt={post.title}
              />
              <div class='order-2 w-full md:order-1'>
                <h3 class='section-title mb-4'>{post.title}</h3>
                <p class='section-subtitle mb-4'>{post.description}</p>
                <footer class='fonf-modium tent-medium text-sm'>
                  <span>
                    {post.tags.map(tag => {
                      return <span>{tag}</span>
                    })}
                  </span>
                  <span> | </span>
                  <span>{post.date}</span>
                </footer>
              </div>
            </article>
          </a>
        )
      })
    }
  </section>
</Layout>
